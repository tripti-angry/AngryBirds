package io.github.some_example_name;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Screen;
import com.badlogic.gdx.graphics.GL20;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.math.Vector2;

public class GameScreen implements Screen {

    private final AngryBirds game; // Reference to the main game class
    private SpriteBatch batch;
    private Texture background; // Game background
    private Texture bird; // The bird texture
    private Vector2 birdPosition; // Position of the bird

    public GameScreen(final AngryBirds game) {
        this.game = game; // Store reference to the main game
        batch = game.batch; // Use the SpriteBatch from the main game

        // Load textures (ensure these images are in your assets folder)
        background = new Texture("background.png"); // Your game background image
        bird = new Texture("bird.png"); // Your bird image

        // Initialize bird position
        birdPosition = new Vector2(100, 100); // Set initial position
    }

    @Override
    public void show() {
        // Called when this screen becomes the current screen
    }

    @Override
    public void render(float delta) {
        // Clear the screen
        Gdx.gl.glClearColor(0, 0, 0, 1); // Set clear color to black
        Gdx.gl.glClear(GL20.GL_COLOR_BUFFER_BIT); // Clear the screen

        // Draw the background and the bird
        batch.begin();
        batch.draw(background, 0, 0); // Draw the background
        batch.draw(bird, birdPosition.x, birdPosition.y); // Draw the bird at its position
        batch.end();

        // Handle game logic here (e.g., input, physics, etc.)
        handleInput();
    }

    private void handleInput() {
        // Simple input handling example (you can expand this)
        if (Gdx.input.isTouched()) {
            // For example, move the bird when the screen is touched
            birdPosition.x += 5; // Move the bird to the right
        }
    }

    @Override
    public void resize(int width, int height) {
        // Called when the screen is resized
    }

    @Override
    public void pause() {
        // Called when the game is paused
    }

    @Override
    public void resume() {
        // Called when the game is resumed
    }

    @Override
    public void hide() {
        // Called when this screen is no longer the current screen
    }

    @Override
    public void dispose() {
        // Dispose of all resources
        batch.dispose();
        background.dispose();
        bird.dispose();
    }
}
